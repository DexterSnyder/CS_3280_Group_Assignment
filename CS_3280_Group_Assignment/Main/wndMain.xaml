<Window x:Class="CS_3280_Group_Assignment.Main.wndMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS_3280_Group_Assignment.Main"
        mc:Ignorable="d"
        Title="wndMain" Height="428.803" Width="768.204">
    <Grid Margin="0,0,0.333,0.333">
        <Menu HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="793">
            <Button x:Name="UpdateButton" Content="Update" BorderBrush="{x:Null}" Click="UpdateButton_Click"/>
            <Button x:Name="Search" Content="Search" BorderBrush="{x:Null}" Click="Search_Click"/>
        </Menu>
        <ListBox x:Name="InvoiceListBox" HorizontalAlignment="Left" Height="205" Margin="35,108,0,0" VerticalAlignment="Top" Width="379" BorderBrush="#FF03060D" SelectionChanged="InvoiceListBox_SelectionChanged"/>
        <Label x:Name="InvoiceHeader" Content="Existing Invoices" HorizontalAlignment="Left" Margin="148,32,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Button x:Name="EditInvoiceButton" Content="Edit" HorizontalAlignment="Left" Margin="35,354,0,0" VerticalAlignment="Top" Width="75" Click="EditInvoiceButton_Click"/>
        <Button x:Name="DeleteInvoiceButton" Content="Delete" HorizontalAlignment="Left" Margin="129,354,0,0" VerticalAlignment="Top" Width="75" Click="DeleteInvoiceButton_Click"/>
        <Button x:Name="NewInvoiceButton" Content="Add" HorizontalAlignment="Left" Margin="227,354,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.454,0.409" Click="NewInvoiceButton_Click"/>
        <TextBox x:Name="InvoiceNumberTextBox" HorizontalAlignment="Left" Height="23" Margin="549,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" IsReadOnly="True"/>
        <TextBox x:Name="InvoiceDateTextBox" HorizontalAlignment="Left" Height="23" Margin="549,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" IsReadOnly="True"/>
        <TextBox x:Name="TotalCostTextBox" HorizontalAlignment="Left" Height="23" Margin="549,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" IsReadOnly="True"/>
        <Label x:Name="InvoiceNumberLabel" Content="Invoice Number" HorizontalAlignment="Left" Margin="423,66,0,0" VerticalAlignment="Top" Width="102"/>
        <Label x:Name="InvoiceDateLabel" Content="Invoice Date" HorizontalAlignment="Left" Margin="444,108,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.626,0.488" Width="81"/>
        <Label x:Name="TotalCostLabel" Content="Total Cost" HorizontalAlignment="Left" Margin="457,155,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.3,-0.33" Width="67"/>
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" Margin="652,210,0,0" VerticalAlignment="Top" Width="75" Click="SaveButton_Click"/>
        <Label Content="Invoice&#xD;&#xA;Number" HorizontalAlignment="Left" Margin="35,66,0,0" VerticalAlignment="Top"/>
        <Label Content="Date" HorizontalAlignment="Left" Margin="129,82,0,0" VerticalAlignment="Top"/>
        <Label Content="Total" HorizontalAlignment="Left" Margin="227,82,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
